[begin] (FluxBox)
	[include] (~/.fluxbox/menu-exec)
	[separator]
  [exec] (Disable compton) {killall compton}
  [exec] (Enable compton) {compton --config ~/.fluxbox/styles/Sky/compton.config}
	[submenu] (FluxBox)
		[workspaces] (Workspaces)
		[submenu] (Styles)
			[stylesdir] (~/.fluxbox/styles)
		[end]
		[config] (Configure)
		[reconfig] (Reconfig)
		[restart] (Restart)
		[separator]
		[exit] (Exit)
	[end]
  [exec] (Shutdown) {~/.fluxbox/show-shutdown-dialog.sh}
[end]
